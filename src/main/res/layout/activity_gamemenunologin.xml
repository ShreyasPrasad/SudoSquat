<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gamemenulayoutnologin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shreyas.sudosquat.gamemenu">

    <ImageView
        app:srcCompat="@color/colorPrimary"
        android:id="@+id/userinfobg"
        android:layout_marginBottom="458dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logobig"
        android:id="@+id/logo"
        android:layout_marginTop="10dp"
        android:layout_marginRight="78dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="17dp"
        android:layout_alignBottom="@+id/userinfobg"
        android:layout_alignRight="@+id/finalstart"
        android:layout_alignEnd="@+id/finalstart" />

    <TextView
        android:text="Select Difficulty and Squat Intensity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/difficultyprompt"
        android:textSize="21sp"
        android:gravity="center"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/multiplierx1"
        android:tag="first"
        android:background="@null"
        android:id="@+id/intensity"
        android:layout_weight="0"
        android:layout_alignTop="@+id/imagedifficult"
        android:layout_toRightOf="@+id/imagedifficult"
        android:layout_toEndOf="@+id/imagedifficult" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/finalstart"
        android:layout_alignStart="@+id/finalstart"
        android:layout_alignBottom="@+id/logo">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp"
            android:id="@+id/welcome"
            tools:text="Welcome"
            android:layout_weight="0"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imagedifficult"
            android:layout_toEndOf="@+id/imagedifficult" />

        <TextView
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:textSize="60sp"
            android:id="@+id/name"
            android:layout_weight="0"
            android:layout_below="@+id/welcome"
            />

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/easybutton"
        android:tag="first"
        android:background="@null"
        android:id="@+id/imagedifficult"
        android:layout_weight="0"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/difficultyprompt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <Button
        android:text="Start Game"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background"
        android:id="@+id/finalstart"
        android:layout_weight="1"
        android:layout_below="@+id/intensity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/backbutton"
        android:onClick="goback"
        android:id="@+id/backbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/difficultyprompt"
        android:layout_alignEnd="@+id/difficultyprompt" />

</RelativeLayout>
